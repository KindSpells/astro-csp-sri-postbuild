{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": { "enabled": true },
	"files": {
		"include": ["*.json", "*.js", "*.mjs", "*.mts", "*.d.ts"],
		"ignore": [
			"coverage-*/**/*",
			"dist/**/*",
			"node_modules/**/*",
			".sst/**/*",
			".astro/**/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	}
}
